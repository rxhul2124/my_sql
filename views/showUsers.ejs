<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: black;
            color: #f2f2f2;
        }
        tr, td, th {
            border: 2px solid whitesmoke;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            color: black;
        }
    </style>
</head>
<body>
    <h1>List of Users</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>USERNAME</th>
            <th>EMAIL</th>
            <th>EDIT</th>
        </tr>
        <% users.forEach(function(user) { %> 
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                    <form method="get" action="/fetch/<%=user.id%>/edit">
                        <button>Edit</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
